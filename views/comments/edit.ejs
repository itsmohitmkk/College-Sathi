<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div col-lg-12 col-md-12 col-sm-12>
            <h1 style="text-align:center;">Edit Comment</h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/j_foods/<%= j_food_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type=text, name="comment[text]" value="<%=comment.text%>">
                    </div>
                    <div class="form-group"> 
                   <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/j_foods/<%= j_food_id %>" class="btn btn-xs btn-warning" >Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>